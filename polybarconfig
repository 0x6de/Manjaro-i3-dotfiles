[colors]
;background = ${xrdb:color0:#222}
background = #222
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #1abc9c
secondary = #e60053
alert = #bd2c40

[bar/oxyde1]
monitor = ${env:MONITOR:DVI-D-0}
width = 100%
height = 25
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = true
#override-redirect = true
wm-restack = i3

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 2

#font-0 = fixed:pixelsize=10;1
font-0 = "Roboto:pixelsize=11:style=Regular;1"
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = "Wuncon Siji:pixelsize=11;1"
font-3 = "FontAwesome:pixelsize=11;1"


modules-right = bspwm player-moc i3 
modules-center = mpd xwindow
modules-left =  powermenu date system-uptime-pretty cpu memory cputemp eth 

tray-position = right
tray-padding = 1
tray-detached = false

;tray-transparent = true
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

